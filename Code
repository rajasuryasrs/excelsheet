import './App.css';
import * as XLSX from 'xlsx';
import React, { useState } from 'react';
import 'bootstrap/dist/css/bootstrap.min.css';

function App() {
  const [data, setData] = useState([]);
  const [error, setError] = useState('');

  const handleFile = (e) => {
    const file = e.target.files[0];

    // Check if the file is an Excel file
    const fileType = file.type;
    if (
      !['application/vnd.ms-excel', 'application/vnd.openxmlformats-officedocument.spreadsheetml.sheet'].includes(fileType)
    ) {
      setError('Only Excel files are allowed.');
      return;
    }

    const reader = new FileReader();
    reader.onload = (e) => {
      const finished = e.target.result;
      const workbook = XLSX.read(finished, { type: 'buffer' });
      const sheetName = workbook.SheetNames[0];
      const worksheet = workbook.Sheets[sheetName];
      const sheetData = XLSX.utils.sheet_to_json(worksheet, { header: 1, raw: false });
      setData(sheetData);
    };
    reader.readAsArrayBuffer(file);
  };


  const handleSubmit = (e) => {
    e.preventDefault();
    setError('');

    if (data.length === 0) {
      setError('No data to submit.');
      return;
    }

    console.log(data);
    // Clear data state or perform any other actions
    setData([]);
  };

  return (
    <div>
      {error && <p style={{ color: 'red' }}>{error}</p>}

      <form onSubmit={handleSubmit}>
        <label className="upload-file-label">
          Upload an Excel file:
        </label>
          <input type="file" accept=".xls,.xlsx" onChange={handleFile} />
        <button type="submit" className="submit-button">Submit</button>
      </form>

      <table className="table-style">
        <tbody>
          {data.map((row, i) => (
            <tr key={i}>
              {row.map((cell, j) => (
                <td key={`${i}-${j}`} className="table-cell-style">
                  {typeof cell === 'object' ? cell.toLocaleDateString() : cell}
                </td>
              ))}
            </tr>
          ))}
        </tbody>
      </table>
    </div>
  );
}

export default App;
